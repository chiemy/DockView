<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PianoView">
        <attr name="peekPercent" format="float"/>
        <attr name="peekSize" format="dimension"/>
        <attr name="deltaHeightPercent" format="float"/>
        <attr name="popOffset" format="integer"/>
        <attr name="gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PianoMenuView">
        <attr name="content_layout" format="reference"/>
        <attr name="orientation">
            <flag name="left_to_right" value="0"/>
            <flag name="right_to_left" value="1"/>
            <flag name="top_to_bottom" value="2"/>
            <flag name="bottom_to_top" value="3"/>
        </attr>
    </declare-styleable>
</resources>